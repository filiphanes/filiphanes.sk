<article class="h-entry">
  <h2 class="p-name"><a href="{{ post.url }}">{{ post.data.title }}</a></h2>
  <span class="post-meta">
    <time class="dt-published" datetime="{{ post.date | date: '%Y-%m-%d' }}">{{ post.date | date: "%d.%m.%Y" }}</time>
    {% for tag in post.data.tags %}{% if tag != "post" %}<a href="/tags/{{ tag }}" class="p-category">#{{ tag }}</a> {% endif %}{% endfor -%}
    {% comment %} {{ post | readingTime }} min čítania, {% endcomment %}
  </span>
</article>
